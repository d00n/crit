.user_row
  .user_row_col1
    = link_to image_tag(event.avatar_photo_url(:thumb), :alt => "#{event.name}"), event_path(event)

  .user_row_col2

    %li.fn
      =link_to event.name, event_path(event), :class => 'url'
    %li.view
      - if event.summary
        %p= truncate_words( event.summary, 5  , '...')
      

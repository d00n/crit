#col1
  %br
  = render :partial => 'character_profile', :locals => {:character => @character}
  =render :partial => "shared/ad"

  -if @is_current_user
    =render :partial => 'post_links'  , :locals => {:character => @character} 

  =render :partial => 'popular_posts'
       

#col2
  .box
    %h3= "#{link_to h(@character.name), character_path(@character)} : Blog".html_safe
    = @category ? "&raquo; " + link_to(@category.name.upcase, users_posts_in_category_path(@user, @category.name)) : ''

  .box
    %h2 Character posts
    = render :partial => 'post', :collection => @posts

    =paginate @posts

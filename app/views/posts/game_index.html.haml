#col1
  %br
  = render :partial => 'game_profile', :locals => {:game => @game}
  =render :partial => "shared/ad"

  -if @is_current_user
    =render :partial => 'post_links', :locals => {:game => @game}        

  =render :partial => 'popular_posts'
        
          
#col2
  .box
    %h2= "#{link_to h(@game.name), game_path(@game)} : Blog".html_safe
    = @category ? "&raquo; " + link_to(@category.name.upcase, users_posts_in_category_path(@user, @category.name)) : ''

  .box
    %h3 Game posts
    = render :partial => 'post', :collection => @posts

    =paginate @posts
